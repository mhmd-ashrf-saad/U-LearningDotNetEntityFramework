<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="منصة U-learning تقدم مسارات تعليمية متكاملة في مختلف المجالات التقنية والتطويرية">
    <meta name="keywords" content="تعلم إلكتروني, دورات, برمجة, تصميم, تطوير">
    <meta name="author" content="U-learning">
    <meta property="og:title" content="U-learning - منصة التعلم الإلكتروني">
    <meta property="og:description" content="انضم لمسارات تعليمية متكاملة وتعلم المهارات العملية خطوة بخطوة">
    <meta property="og:image" content="~/Images/Logo.png">
    <meta property="og:url" content="https://u-learning.com">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="Images/Logo.png" type="Images/icon type">
    <link href="img/favicon.ico" rel="icon">
    <title>@ViewBag.Title - U-learning - منصة التعلم الإلكتروني</title>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@600&family=Lobster+Two:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2:wght@400..800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Styles")
</head>
<body>
    <!-- Navbar Start-->
    <button onclick="topFunction()" id="scrlUp" title="Go to top" aria-label="الانتقال إلى أعلى الصفحة">
        <i class="arrow up"></i>
    </button>
    <!-- hamburger menu -->
    <div class="header">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand" aria-label="الصفحة الرئيسية">
            <img src="Images/Logo.png" id="Logo" alt="شعار U-learning">
        </a>
        <div class="header-search">
            <input type="text" class="search-input" placeholder="ابحث عن ...." aria-label="بحث">
            <button class="search-button" aria-label="تنفيذ البحث">ابحث</button>
        </div>
        <a href="@Url.Action("Login", "Users")" class="profile-icon" aria-label="الملف الشخصي">
            <i class="fas fa-user"></i>
        </a>
        <nav class="hamburger-btn" aria-label="قائمة الهاتف المحمول">
            <div class="hamburger" role="button" aria-expanded="false" aria-controls="off-screen-menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
    </div>


    <div class="off-screen-menu" role="navigation" aria-label="القائمة الرئيسية">
        <ul>
            <a href="@Url.Action("Index", "Courses")">
            <li>تصفح المسارات</li>
            </a>
            <a href="@Url.Action("Index", "Home")">
            <li>الرئيسية</li>
            </a>
            <a href="@Url.Action("About", "Home")">
            <li>عننا</li>
            </a>
        </ul>
    </div>
    <!-- end hamburger -->
    <div style="height:106px">
        <header class="site-header" role="banner">
            <div class="header-container">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <h1 id="logo-text"><img src="@Url.Content("~/Images/Logo.png")" id="Logo" alt="شعار U-learning" /></h1>
                </a>
                <nav class="nav-section">
                    <a href="@Url.Action("Index", "Courses")" class="nav-link">تصفّح المسارات</a>
                </nav>
                <div class="search-section">
                    <div class="search-container">
                        <input type="text" class="search-input" placeholder="ابحث عن ...." aria-label="بحث" />
                        <button class="search-button">ابحث</button>
                    </div>
                </div>
                <div class="auth-section">
                    <a href="@Url.Action("Login", "Users")">
                        <button class="btn-outline auth-header"id="login-btn">تسجيل دخول</button>
                    </a>
                    <a href="@Url.Action("Create", "Users")">
                        <button class="btn-primary auth-header" id="register-btn">إنشاء حساب</button>
                    </a>
                </div>
            </div> 
        </header>
    </div>
    <!-- content -->

    @RenderBody()


    </div>
    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <div class="footer-brand">
                <h2>U-<span class="footer-brand-span">Learning</span></h2>
            </div>
            <nav class="footer-nav">
                <a href="@Url.Action("Index", "Home")" class="footer-link">الرئيسية</a>
                <a href="@Url.Action("About", "Home")" class="footer-link">عننا</a>
                <a href="@Url.Action("Contact", "Home")" class="footer-link">اتصل بنا</a>
                <a href="@Url.Action("Index", "Courses")" class="footer-link">عرض المسارات</a>
                <a href="@Url.Action("Index","Instructors")" class="footer-link">انضم كمحاضر</a>
            </nav>
            <div class="footer-copyright">
                <p>جميع الحقوق محفوظة © 2025</p>
            </div>
        </div>
    </footer>

    <script src='Scripts/Shared/main.js'></script>
    <script src="Scripts/Shared/header.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
